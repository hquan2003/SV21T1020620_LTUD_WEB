@model SV21T1020620.Shop.Models.ProductSearchResult
@{
    Layout = null;
}
<!-- Product Cards -->
<div class="container row" id="productList">
    <h3 class="text-center mb-4">Tất cả sản phẩm</h3>
    <div class="row">
        @foreach (var item in Model.Data)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img src="~/Image/Products/@item.Photo" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/Product/Detail?productID=@item.ProductID" class="text-decoration-none">
                                @item.ProductName
                            </a>
                        </h5>
                        <p class="card-text">@item.Price.ToString("N0") VNĐ</p>
                        <a href="~/Product/AddToCart?ProductID=@item.ProductID&quantity=1" class="btn btn-primary">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="page-item active">
                        <span class="page-link">@p</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:;" onclick="doSearch(@p)">@p</a>
                    </li>
                }
            }
        </ul>
    </nav>
</div>


