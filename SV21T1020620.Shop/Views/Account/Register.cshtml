@model SV21T1020620.DomainModels.CustomerDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #6EC2F7, #3EAEF4);
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-container {
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .register-container h3 {
                margin-bottom: 1.5rem;
                font-weight: bold;
                color: #333;
            }

        .btn-primary {
            background-color: #6e8efb;
            border: none;
        }

            .btn-primary:hover {
                background-color: #5a78e3;
            }
    </style>
</head>
<body>
    <div class="register-container">
        <h3 class="text-center">HQ Shop - Đăng Ký</h3>
        <form id="registerForm" method="post" action="/Account/Save">
            <div class="mb-3">
                <label for="fullName" class="form-label">Họ và Tên</label>
                <input type="text" class="form-control" id="fullName" name="@nameof(Model.CustomerName)" placeholder="Nhập họ và tên" required autofocus>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Tên liên hệ</label>
                <input type="text" class="form-control" id="username" name="@nameof(Model.ContactName)" placeholder="Nhập tên liên hệ" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="@nameof(Model.Email)" placeholder="Nhập email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="password" name="@nameof(Model.password)" placeholder="Nhập mật khẩu" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
            </div>
            @Html.ValidationMessage("Error")
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Đăng Ký</button>
            </div>
            <div class="mt-3 text-center">
                <small>Đã có tài khoản? <a href="~/Account/Login" class="text-decoration-none">Đăng nhập</a></small>
            </div>
        </form>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('registerForm').addEventListener('submit', function (event) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                event.preventDefault(); // Ngăn không cho gửi biểu mẫu
                alert('Mật khẩu và xác nhận mật khẩu không khớp!');
            }
        });
    </script>
</body>
</html>
